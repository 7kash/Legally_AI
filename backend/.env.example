# Application
APP_NAME=Legally AI
APP_VERSION=1.0.0
DEBUG=False
API_PREFIX=/api

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/legally_ai

# Redis
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# LLM Providers
LLM_PROVIDER=groq
GROQ_API_KEY=gsk_your_groq_api_key_here
DEEPSEEK_API_KEY=sk_your_deepseek_api_key_here
OPENAI_API_KEY=sk_your_openai_api_key_here

# File Storage
UPLOAD_DIR=/data/contracts
MAX_FILE_SIZE_MB=10

# Trial Limits
FREE_TIER_ANALYSES=3

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_ANNUAL=price_your_annual_price_id

# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_key
FROM_EMAIL=noreply@legally-ai.com

# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:7860","https://legally-ai.vercel.app"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
