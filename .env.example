# Legally AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=legally_ai
POSTGRES_PASSWORD=change_this_in_production
POSTGRES_DB=legally_ai
POSTGRES_PORT=5432

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=change_this_redis_password
REDIS_PORT=6379

# ============================================
# APPLICATION CONFIGURATION
# ============================================
DEBUG=true
SECRET_KEY=change-this-secret-key-in-production-use-long-random-string
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# LLM PROVIDER CONFIGURATION
# ============================================
LLM_PROVIDER=groq
GROQ_API_KEY=gsk_your_groq_api_key_here
DEFAULT_MODEL=llama-3.3-70b-versatile

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/app/uploads

# ============================================
# SUPPORTED LANGUAGES
# ============================================
SUPPORTED_LANGUAGES=russian,serbian,french,english

# ============================================
# STRIPE (PAYMENTS) - Optional
# ============================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_...
# STRIPE_PREMIUM_ANNUAL_PRICE_ID=price_...

# ============================================
# SENDGRID (EMAIL) - Optional
# ============================================
# SENDGRID_API_KEY=SG...
# FROM_EMAIL=noreply@legally-ai.com

# ============================================
# SENTRY (ERROR TRACKING) - Optional
# ============================================
# SENTRY_DSN=https://...@sentry.io/...

# ============================================
# BACKEND/FRONTEND PORTS
# ============================================
BACKEND_PORT=8000
FLOWER_PORT=5555
